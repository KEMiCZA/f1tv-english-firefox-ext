{
  "manifest_version": 2,
  "name": "F1TV English commentary",
  "version": "0.0.1",
  "description": "Listen to English commentary in all countries.",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "https://*.formula1.com/*",
    "webRequest",
    "webRequestBlocking",
    "activeTab"
  ],
  "applications": {
    "gecko": {
      "id": "f1tv-english@blaise.io"
    }
  }
}
